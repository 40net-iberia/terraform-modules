version: '3.8' 
services:
  db:
    image: mysql:5.7
    container_name: mysql_db
    cap_add:
      - SYS_NICE
    restart: always
    env_file:
      - .env
    ports:
      - '3306:3306'
    volumes:
      - ./db_init:/docker-entrypoint-initdb.d
      - db:/var/lib/mysql
  web:
    image: php:8.0.20-apache
    container_name: php_web
    depends_on:
      - db
    volumes:
      - ./web_init:/var/www
    ports:
      - "8000:80"
    stdin_open: true
    tty: true
  phpmyadmin:
    image: phpmyadmin
    container_name: phpmyadmin
    restart: always
    ports:
      - 8001:80
    environment:
      - PMA_ARBITRARY=1
volumes:
  db:
    driver: local
  